// Compound Interest

#include<stdio.h>
#include<math.h>
int main()
{float P,r,T;
double CI,x;
printf("Enter the Principle amount : ");
scanf("%f",&P);
printf("Enter the Rate : ");
scanf("%f",&r);
printf("Enter the time : ");
scanf("%f",&T);
x = pow((1+(r/100)),T);
CI=P*x;
printf("\nCompound Interest is : %lf",CI);
return 0;
}
